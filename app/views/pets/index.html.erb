<p id="notice"><%= notice %></p>

<div class="search">
  <%= bootstrap_form_tag controller: 'pets', action: 'index', method: 'get' do |f| %>
    <%= text_field_tag :types, params[:types], placeholder: "Type" %>
    <%= text_field_tag :breed, params[:breed], placeholder: "Breed" %>
    <%= select_tag :gender, options_for_select(["Male","Female"], :selected => :gender), :include_blank => 'Select Gender', class: "btn btn-default" %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <i class="glyphicon glyphicon-search"><strong> Search</strong></i>
      <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Pets Gallery</h1>
  </div>
  <% @pets.each do |pet| %>
    <div class="col-lg-4 col-md-4 col-xs-6 thumb">
      <a class="thumbnail" href="/pets/<%= pet.id %>">
        <%= image_tag pet.photos[0].thumb, class: "img-response", alt: "" %>
        <th>Name: </th><td><%= pet.name %></td>
      </a>
    </div>
  <% end %>
</div>

<%= link_to 'New Pet', new_pet_path %>
